	<!-- 加载配置属性文件（谁先加载，谁优先级越高）-->
	<context:property-placeholder ignore-unresolvable="true" location="classpath:jflow.properties" />
	
	<!-- JFlow上下文句柄，设置数据源，获取请求与相应对象 -->
	<bean id="jflowContextHolderUtils" class="cn.jflow.common.util.ContextHolderUtils">
